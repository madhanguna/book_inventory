<h4> 1.<%= link_to 'New Publisher', :controller => 'publishers',:action=>'new' %></h4>
<h4> 2.<%= link_to 'New Author', new_author_path %></h4>


<h1>Listing Publishers</h1>
 
<table border=1>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @publisher.each do |p| %>
    <tr>
      <td><%= p.name %></td>
       <td><%= link_to 'Edit', edit_publisher_path(p) %></td>
       <td><%= link_to 'Show', publisher_path(p) %></td>
          	<td><%= link_to 'Destroy', publisher_path(p),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
